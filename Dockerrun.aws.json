{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
        {
            "command": [
                "bash",
                "start-eb.sh"
            ],
            "essential": true,
            "mountPoints": [
                {
                    "containerPath": "/code",
                    "sourceVolume": "_"
                }
            ],
            "name": "web",
            "portMappings": [
                {
                    "containerPort": 80,
                    "hostPort": 8000
                }
            ]
        },
        {
            "name": "db",
            "image": "postgres",
            "essential": true
        },
        {
            "name": "solr",
            "entryPoint": [
                "docker-entrypoint.sh",
                "solr-precreate",
                "cobweb"
            ],
            "essential": true,
            "image": "solr:6",
            "mountPoints": [
                {
                    "containerPath": "/opt/solr/server/solr/mycores",
                    "sourceVolume": "_Solrdata"
                }
            ],
            "portMappings": [
                {
                    "containerPort": 8983,
                    "hostPort": 8983
                }
            ]
        }
    ],
    "family": "",
    "volumes": [
        {
            "host": {
                "sourcePath": "./solrdata"
            },
            "name": "_Solrdata"
        },
        {
            "host": {
                "sourcePath": "."
            },
            "name": "_"
        }
    ]
}
